<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DiagnosticFault"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Diagnostic Fault"
            android:textColor="#0EDDE1"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ChgMosFault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"

            android:clickable="true"
            android:gravity="center"
            android:text="ChgMosFault"

            android:textColor="@color/colorPrimary"
            android:background="@drawable/tv_round"/>


        <TextView
            android:id="@+id/DisChgMosFault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_round"
            android:clickable="false"
            android:gravity="center"
            android:text="DisChgMosFault"
            android:textColor="@color/colorPrimary" />


        <TextView
            android:id="@+id/ChargerFault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_round"
            android:gravity="center"
            android:text="ChargerFault"
            android:textColor="@color/colorPrimary" />





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/CellZeroVol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"

            android:gravity="center"
            android:text="CellZeroVol"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/tv_round"/>

        <TextView
            android:id="@+id/CellDisconnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_round"
            android:gravity="center"
            android:text="CellDisconnect"
            android:textColor="@color/colorPrimary" />


        <TextView
            android:id="@+id/AfeFault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/tv_round"
            android:gravity="center"
            android:text="AfeFault"
            android:textColor="@color/colorPrimary" />





    </LinearLayout>



</LinearLayout>